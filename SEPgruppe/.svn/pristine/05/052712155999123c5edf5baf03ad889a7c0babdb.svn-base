@charset "UTF-8";
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}
.biggestContainer {
    display: flex; 
    flex-direction: column;
    min-height: 100vh;
}
.top-nav {
    display: flex;
    justify-content: center; /* 가운데 정렬 */
    align-items: center;
    background: #4B5651; /* 다크 그린 계열 배경 */
    padding: 10px 20px;
    border-radius: 40px; /* 둥근 네비바 */
    width: 90%;
    max-width: 1200px;
    margin: 20px auto; /* 중앙 정렬 */
}

/* 네비게이션 내부 정렬 */
.nav-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
}

/* 왼쪽 메뉴 */
.nav-menu {
    display: flex;
    list-style: none;
    gap: 20px;
    padding: 0;
    margin: 0;
}

.nav-menu li a {
    color: white;
    text-decoration: none;
    font-weight: bold;
}

/* 우측 영역 스타일 */
.nav-right {
    display: flex;
    align-items: center;
    gap: 15px;
}

/* 언어 선택 버튼 */
.lang-btn {
    background: rgba(255, 255, 255, 0.2);
    border: none;
    padding: 8px 15px;
    border-radius: 20px;
    color: white;
    font-weight: bold;
    cursor: pointer;
}

/* 우측 메뉴 */
.nav-links {
    display: flex;
    list-style: none;
    gap: 15px;
    padding: 0;
    margin: 0;
}

.nav-links li a {
    color: white;
    text-decoration: none;
}

/* 기부 버튼 */
.donate-btn {
    background: rgba(255, 255, 255, 0.2);
    border: none;
    padding: 8px 15px;
    border-radius: 20px;
    color: white;
    font-weight: bold;
    cursor: pointer;
}

/* 구분선 */
.divider {
    height: 20px;
    width: 2px;
    background: rgba(255, 255, 255, 0.4);
}

